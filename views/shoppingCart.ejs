  <%- include("message") %>

    <ol>
      <% orders.forEach(order=> { %>
        <li>
          <h4>
            <%= order.title %>
          </h4>
          <p>
            Price: <%= order.price %> kr
          </p>
          <p>
            Quantity:
            <a href="/reduceincart/<%= order.id %>">â€“</a>
            <%= order.quantity%>
            <a href="/addincart/<%= order.id %>">+</a>
          </p>
          <p>Total price: <%= order.total%>kr</p>
          <a href="/shoppingcart/remove/<%= order.id %>">Remove</a>
        </li>
        <% }) %>
    </ol>

    <% if (totalAmount> 1) { %>
      <p>
        <%=totalAmount%>
      </p>
    <% } %>
    
